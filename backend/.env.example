# Spotify OAuth (https://developer.spotify.com/dashboard)
SPOTIFY_CLIENT_ID=your_client_id
SPOTIFY_CLIENT_SECRET=your_client_secret
REDIRECT_URI=http://127.0.0.1:8000/callback
FRONTEND_URI=http://localhost:5173

# Google Gemini (optional â€” AI descriptions disabled if missing)
GEMINI_API_KEY=your_gemini_key

# Server
PORT=8000
LOG_LEVEL=info          # error | warn | info | debug

# Analysis tuning
MAX_TRACKS=50           # max tracks per analysis (default: 50)
API_CONCURRENCY=3       # concurrent external API requests (default: 3)

# Cache
CACHE_MAX_SIZE=5000     # max cache entries before LRU eviction
CACHE_TTL=86400         # cache TTL in seconds (default: 24h)

# Database
DB_PATH=./data/mood_analyzer.db
